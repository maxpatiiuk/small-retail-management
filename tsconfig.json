{
  /* File Inclusion */
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./declarations.d.ts"
  ],
  "compilerOptions": {
    /* Basic Options */
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "es2021",
      "esnext"
    ],
    "allowImportingTsExtensions": true,
    "module": "esnext",
    "noEmit": true,
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "allowJs": true,
    "checkJs": false,
    /**/
    /* Strict Checks */
    "strict": true,
    /**/
    /* Module Resolution */
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    /**/
    /* Linter Checks */
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    /**/
    /* Advanced */
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "incremental": true
  },
  "noPropertyAccessFromIndexSignature": true
}
